
<%- include('../partials/header') %>




<p>Type - <%= pokemon.type %></p>
<p>Pokdex Number - <%= pokemon.pokeDexNo %></p>


<form action="/pokemon/<%= pokemon._id %>?_method=DELETE" method="POST">
    <button type="submit">Delete Pokemon</button>
</form>

<h4>Edit Pokemon</h4>
<form action="/pokemon/<%= pokemon._id %>?_method=PUT" method="POST">
    <form action="/pokemon" method="POST">
        <label>Name:
        <input type="text" name="name" autocomplete="off">
        </label><br>
        <label>Type:
        <input type="text" name="type" autocomplete="off">
        </label><br>
        <label>PokeDexNumber:
        <input type="number" name="pokeDexNo" required pattern="\d{4}" autocomplete="off"> Format should be 0002
        </label><br>
    <button type="submit">Edit Pokemon</button>
</form>


<h4>Add a Move to this Pokemon</h4>
<form action="/pokemon/<%= pokemon._id %>/moves/?_method=PUT" method="POST">
    <form action="/pokemon" method="POST">
        <label>Name:
        <input type="text" name="name" autocomplete="off">
        </label><br>
        <label>Damage:
        <input type="number" name="damage" autocomplete="off">
        </label><br>
    <button type="submit">Add Move to This Pokemon</button>
</form>



<h4>Move List</h4>
<table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Damage</th>
      </tr>
    </thead>
    <tbody>
      <tr>
      <% moves.forEach(function(m) { %>
        <td><%= m.name  %></td>
        <td><%= m.damage  %></td>
      </tr>
      <% }) %>
 
    </tbody>
 </table>
</body>
</html>